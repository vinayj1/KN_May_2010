<h1>Blogs listing</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Publish date</th>
    <th>Web link</th>
    <th>Actions</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%=h blog.title %></td>
    <td><%=h blog.publish_date %></td>
    <td><a href="<%=h blog.web_link %>"><%=h truncate_letters(blog.web_link) %></a></td>
    <td><%= link_to 'Show', blog %>  <%= link_to 'Edit', edit_blog_path(blog) %> <%= link_to 'Destroy', blog, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

